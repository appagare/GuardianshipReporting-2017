@model IEnumerable<GFR.Models.UserSetting>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Settings</h3>   

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Group)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FriendlyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td title="@item.Description">
                @Html.DisplayFor(modelItem => item.Group)
            </td>
            <td title="@item.Description">
                @Html.DisplayFor(modelItem => item.FriendlyName)
            </td>
            <td title="@item.Description">
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                <a href="@Url.Action("Edit", "UserSettings", new { group = item.Group, setting = item.Setting  })" title='Edit "@item.Description" record'><span class="glyphicon glyphicon-pencil" aria-hidden="true" style="margin-right: 5px;"></span></a>
            </td>
        </tr>
    }

    <tr>
        <td colspan="3"></td>
        <td>
            <div class="text-right">
                <br />
                <a href="@Url.Action("Index", "UserCategories")" title="Modify report categories (CAUTION!)">Report Categories</a>
            </div>
        </td>

    </tr>

</table>




